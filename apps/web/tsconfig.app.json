{
  "extends": "@personal-finance-app/typescript-config/vite.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/style.css", "env.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
